<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Furniture List</h2>
    <a href="/furnitures/new" class="btn btn-primary">Add New Furniture</a>
</div>

<div class="row">
    <% furnitures.forEach(furniture => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= furniture.furnitureName %></h5>
                    <p class="card-text">
                        <strong>Price:</strong> $<%= furniture.price %><br>
                        <strong>Category:</strong> <%= furniture.category %><br>
                        <strong>Stock:</strong> <%= furniture.stock %>
                    </p>
                    <div class="btn-group">
                        <a href="/furnitures/<%= furniture._id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/furnitures/<%= furniture._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/furnitures/<%= furniture._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div> 