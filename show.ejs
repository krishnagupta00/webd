<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>Furniture Details</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h5>Furniture Name</h5>
                    <p><%= furniture.furnitureName %></p>
                </div>
                <div class="mb-3">
                    <h5>Price</h5>
                    <p>$<%= furniture.price %></p>
                </div>
                <div class="mb-3">
                    <h5>Description</h5>
                    <p><%= furniture.description %></p>
                </div>
                <div class="mb-3">
                    <h5>Category</h5>
                    <p><%= furniture.category %></p>
                </div>
                <div class="mb-3">
                    <h5>Stock</h5>
                    <p><%= furniture.stock %></p>
                </div>
                <div class="d-grid gap-2">
                    <a href="/furnitures/<%= furniture._id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/furnitures/<%= furniture._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                    <a href="/furnitures" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div> 