<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>Edit Furniture</h3>
            </div>
            <div class="card-body">
                <form action="/furnitures/<%= furniture._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="furnitureName" class="form-label">Furniture Name</label>
                        <input type="text" class="form-control" id="furnitureName" name="furnitureName" value="<%= furniture.furnitureName %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" value="<%= furniture.price %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required><%= furniture.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <input type="text" class="form-control" id="category" name="category" value="<%= furniture.category %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="stock" name="stock" min="0" value="<%= furniture.stock %>" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update Furniture</button>
                        <a href="/furnitures" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 